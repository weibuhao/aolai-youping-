.car-empty {
  margin-top: 300rpx;
}
.goods-carts {
  display: flex;
  flex-direction: column;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
}
.goods-carts .total-icon {
  -webkit-transform: translateY(-50%) !important;
          transform: translateY(-50%) !important;
  left: 22rpx !important;
}
.goods-carts .total-price {
  position: absolute;
  top: 50%;
  left: 50%;
  z-index: 999;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  font-size: 36rpx;
  color: #fb5032;
  font-weight: 700;
}
.uni-tab__cart-sub-left {
  padding: 0 500rpx 0 10rpx !important;
}
.van-empty {
  padding: 160px 0 !important;
}
.van-empty__image {
  width: 150rpx !important;
  height: 150rpx !important;
}
.van-submit-bar__bar {
  justify-content: space-between !important;
}
.cart-page {
  padding-bottom: 80rpx;
}
.cart-container {
  margin: 20rpx 0;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 20rpx;
}
.cart-container .cart-head {
  margin: 20rpx 0;
  font-size: 45rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.cart-container .cart-head .cart-icon {
  display: flex;
  align-items: center;
}
.cart-container .cart-head text {
  font-size: 28rpx;
}
.cart-container .cart-head .edit-box {
  padding: 0 15rpx;
  height: 50rpx;
  font-size: 28rpx;
  line-height: 50rpx;
  border-radius: 100rpx;
  background-color: #3b9cff;
  color: #fff;
  text-align: center;
}
.address-item-change {
  display: flex;
  align-items: center;
}
.cart-goods {
  display: flex;
  align-items: center;
}
.animation {
  -webkit-animation: jelly 0.6s ease;
          animation: jelly 0.6s ease;
}
@-webkit-keyframes jelly {
from {
    -webkit-transform: scale(1, 1);
            transform: scale(1, 1);
}
30% {
    -webkit-transform: scale(1.25, 0.75);
            transform: scale(1.25, 0.75);
}
40% {
    -webkit-transform: scale(0.75, 1.25);
            transform: scale(0.75, 1.25);
}
50% {
    -webkit-transform: scale(1.15, 0.85);
            transform: scale(1.15, 0.85);
}
65% {
    -webkit-transform: scale(0.95, 1.05);
            transform: scale(0.95, 1.05);
}
75% {
    -webkit-transform: scale(1.05, 0.95);
            transform: scale(1.05, 0.95);
}
to {
    -webkit-transform: scale(1, 1);
            transform: scale(1, 1);
}
}
@keyframes jelly {
from {
    -webkit-transform: scale(1, 1);
            transform: scale(1, 1);
}
30% {
    -webkit-transform: scale(1.25, 0.75);
            transform: scale(1.25, 0.75);
}
40% {
    -webkit-transform: scale(0.75, 1.25);
            transform: scale(0.75, 1.25);
}
50% {
    -webkit-transform: scale(1.15, 0.85);
            transform: scale(1.15, 0.85);
}
65% {
    -webkit-transform: scale(0.95, 1.05);
            transform: scale(0.95, 1.05);
}
75% {
    -webkit-transform: scale(1.05, 0.95);
            transform: scale(1.05, 0.95);
}
to {
    -webkit-transform: scale(1, 1);
            transform: scale(1, 1);
}
}

