/* 水平间距 */
.search_history_text {
  font-size: 24rpx;
  color: #cfcfcf;
}
.search-record-box {
  padding: 0 20rpx;
}
.search-record-box .search-record-itlte {
  height: 60rpx;
  line-height: 60rpx;
  margin: 15rpx 0;
  display: flex;
  justify-content: space-between;
  border-bottom: 5rpx solid #efefef;
}
.search-record-box .search-record-itlte .search-itlte {
  font-size: 26rpx;
  color: #cfcfcf;
}
.search-record-box .search-record-itlte .icon-delete {
  font-size: 40rpx !important;
  margin-right: 20rpx;
}
.search-record-box .search-record-itlte .delete-state {
  display: flex;
}
.search-record-box .search-record-itlte .delete-state .delete {
  font-size: 24rpx;
  border: 1rpx solid #3b9cff;
  border-radius: 100rpx;
  background-color: #3b9cff;
  padding: 0 15rpx 0 15rpx;
  margin: 0 10rpx;
  color: #ffff;
}
.search-record-box .search-record {
  padding-top: 0;
  display: flex;
  flex-wrap: wrap;
}
.search-record-box .search-record .search-record-item {
  max-width: 120rpx;
  text-align: center;
  border: 3rpx solid #cfcfcf;
  border-radius: 100rpx;
  font-size: 24rpx;
  padding: 10rpx 15rpx;
  margin: 10rpx;
  position: relative;
}
.search-record-box .search-record .search-record-item .delete-box {
  text-align: center;
  line-height: 25rpx;
  display: block;
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  background-color: #cfcfcf;
}
.search-record-box .search-record .search-record-item .search-record-word {
  max-width: 130rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.search-tips-box {
  background-color: #ffff;
  display: flex;
  flex-direction: column;
}
.search-tips-box .search-tips-item {
  padding: 10rpx 30rpx;
  border-bottom: 1rpx solid #f9fafb;
  font-size: 24rpx;
}
.animation {
  -webkit-animation: fly-1 0.6s ease-in-out infinite alternate;
          animation: fly-1 0.6s ease-in-out infinite alternate;
}
@-webkit-keyframes fly-1 {
from {
    -webkit-transform: translateY(0.1em);
            transform: translateY(0.1em);
}
to {
    -webkit-transform: translateY(-0.1em);
            transform: translateY(-0.1em);
}
}
@keyframes fly-1 {
from {
    -webkit-transform: translateY(0.1em);
            transform: translateY(0.1em);
}
to {
    -webkit-transform: translateY(-0.1em);
            transform: translateY(-0.1em);
}
}

